<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- use the previously created timestamp to create a uniquely
        named log file -->
        <file>/homt/tmt/tmp/logtester.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator> <!-- defaults to type ch.qos.logback.classic.boolex.JaninoEventEvaluator -->
                <expression>logger.equals("crux.logging-test")</expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>NEUTRAL</OnMatch>
        </filter>
    </appender>
    <root level="trace">
        <appender-ref ref="FILE" />
    </root>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="crux" level="trace" />
    <logger name="crux.node" level="trace" />
    <logger name="crux.standalone" level="trace" />
    <logger name="crux.hash" level="trace" />
    <logger name="crux.http-server" level="trace" />
    <logger name="crux.kafka" level="trace" />
    <logger name="crux.jdbc" level="trace" />
    <logger name="crux.kv.memdb" level="trace" />
    <logger name="crux.rdf" level="trace" />
    <logger name="crux.tx" level="trace" />
    <logger name="crux.logging-test" level="trace" />
    <logger name="org.apache.kafka" level="trace" />
    <logger name="org.apache.zookeeper" level="trace" />
</configuration>
